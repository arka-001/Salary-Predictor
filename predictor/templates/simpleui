<body>

    <div class="card">
        <h1>üîÆ AI Salary Predictor</h1>
        <p class="sub-text">Based on Deep Learning of Database Patterns</p>
        
        <div class="input-group">
            <label>Years of Experience</label>
            <input type="number" id="years" placeholder="Ex: 3.5">
        </div>

        <div class="input-group">
            <label>Skill Level (1-10)</label>
            <span class="badge">Level: <span id="lvl">5</span></span>
            <input type="range" id="level" min="1" max="10" value="5" oninput="updateLevel(this.value)">
        </div>

        <button class="btn-main" onclick="predict()">PREDICT SALARY</button>
        
        <!-- RESULT SECTION -->
        <div id="res-cont" class="result-container">
            <div class="res-row">
                <div class="lbl">Yearly Package (CTC)</div>
                <div id="y-val" class="val val-year">‚Çπ 0</div>
            </div>
            <div class="res-row">
                <div class="lbl">Monthly In-Hand</div>
                <div id="m-val" class="val val-month">‚Çπ 0</div>
            </div>
        </div>

        <!-- GRAPH -->
        <div class="chart-wrapper">
            <canvas id="salaryChart" height="200"></canvas>
        </div>

        <a href="/train/" class="link-btn">‚öôÔ∏è Open Training Dashboard</a>
    </div>

    <script>
        function updateLevel(val) { document.getElementById('lvl').innerText = val; }

        // --- 1. SETUP CHART ---
        const ctx = document.getElementById('salaryChart').getContext('2d');
        
        // Create Gradient for the Line
        let gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(0, 242, 195, 0.4)'); // Cyan Top
        gradient.addColorStop(1, 'rgba(0, 242, 195, 0.0)'); // Transparent Bottom

        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                // X-Axis Labels (0 to 10 Years)
                labels: [0, 2, 4, 6, 8, 10], 
                datasets: [
                    {
                        label: 'Market Average',
                        // A rough curve representing market growth
                        data: [300000, 800000, 1600000, 2600000, 3800000, 5500000],
                        borderColor: '#00f2c3', // Cyan Line
                        backgroundColor: gradient, // Gradient Fill
                        borderWidth: 2,
                        tension: 0.4, // Smooth Curves
                        fill: true,
                        pointRadius: 0 // Hide points on the line
                    },
                    {
                        label: 'Your Prediction',
                        data: [], // Filled dynamically
                        backgroundColor: '#ba54f5', // Purple Dot
                        borderColor: '#fff',
                        borderWidth: 2,
                        pointRadius: 8,
                        pointHoverRadius: 12,
                        type: 'scatter' // It's a single point, not a line
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: true, labels: { color: '#ccc', font: {size: 10} } },
                    tooltip: {
                        backgroundColor: 'rgba(30, 30, 50, 0.9)',
                        titleColor: '#00f2c3',
                        bodyColor: '#fff',
                        padding: 10,
                        callbacks: {
                            // Custom Tooltip Text: "‚Çπ 12.5 Lakhs"
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) label += ': ';
                                if (context.parsed.y !== null) {
                                    label += '‚Çπ ' + (context.parsed.y / 100000).toFixed(1) + ' Lakhs';
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: { color: 'rgba(255,255,255,0.05)' },
                        ticks: { color: '#666' },
                        title: { display: true, text: 'Years Experience', color: '#555', font: {size: 10} }
                    },
                    y: {
                        grid: { color: 'rgba(255,255,255,0.05)' },
                        ticks: { 
                            color: '#666',
                            // Format Y-Axis: "10L", "20L"
                            callback: function(value) { return value/100000 + 'L'; } 
                        }
                    }
                }
            }
        });

        // --- 2. PREDICT FUNCTION ---
        async function predict() {
            const y = document.getElementById('years').value;
            const l = document.getElementById('level').value;
            
            if(!y) return; 

            // Call Django API
            const res = await fetch('/api/predict/', {
                method: 'POST', headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ years: y, level: l })
            });

            const data = await res.json();
            
            // Show Results
            const box = document.getElementById('res-cont');
            box.style.display = 'block';
            box.style.animation = "fadeIn 0.5s";
            
            document.getElementById('y-val').innerText = data.yearly;
            document.getElementById('m-val').innerText = data.monthly;

            // Update Graph Point
            chart.data.datasets[1].data = [{x: y, y: data.raw}];
            chart.update();
        }
    </script>
</body>
